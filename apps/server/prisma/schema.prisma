generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Word {
  id           Int       @id @default(autoincrement())
  word         String    @default("") @db.VarChar(255)
  means        Json?
  essays       String?   @db.Text
  labels       Json?
  deleted      Boolean   @default(false)
  easiness     Float     @default(0) @db.Float
  interval     Float     @default(0) @db.Float
  needReviewAt DateTime? @map("need_review_at")
  proficiency  String    @default("") @db.VarChar(50)
  repetitions  Int       @default(0) @db.Int
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@index([word])
  @@index([needReviewAt])
  @@index([deleted])
  @@map("words")
}

model Essay {
  id        Int       @id @default(autoincrement())
  content   String    @db.Text
  essayType String    @default("") @map("essay_type") @db.VarChar(30)
  file      String    @default("") @db.VarChar(255)
  fileId    String    @default("") @map("file_id") @db.VarChar(255)
  sentences Json?
  taskId    String    @default("") @map("task_id") @db.VarChar(255)
  telegraph String    @default("") @db.VarChar(255)
  thumb     String    @default("") @db.VarChar(255)
  title     String    @default("") @db.VarChar(36)
  videoLink String    @default("") @map("video_link") @db.VarChar(255)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("essays")
}
