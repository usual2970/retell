generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Word {
  id           Int       @id @default(autoincrement())
  word         String    @default("") @db.VarChar(255)
  means        Json?
  essays       String?   @db.Text
  labels       Json?
  deleted      Boolean   @default(false)
  easiness     Float     @default(0) @db.Float
  interval     Float     @default(0) @db.Float
  needReviewAt DateTime? @map("need_review_at")
  proficiency  String    @default("") @db.VarChar(50)
  repetitions  Int       @default(0) @db.Int
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@index([word])
  @@index([needReviewAt])
  @@index([deleted])
  @@map("words")
}
